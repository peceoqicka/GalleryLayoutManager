<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.peceoqicka.demo.gallerylayoutmanager.activity.first.ItemFirstScaleViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/px_20"
        app:cardElevation="2dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="@dimen/px_360"
            android:layout_height="@dimen/px_528">

            <ImageView
                android:id="@+id/iv_item_first_scale_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                app:imageUrl="@{model.imageUrl}"
                app:layout_constraintBottom_toTopOf="@+id/tv_item_first_scale_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/tv_item_first_scale_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/px_20"
                android:layout_marginTop="@dimen/px_10"
                android:layout_marginEnd="@dimen/px_20"
                android:layout_marginBottom="@dimen/px_20"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{model.title}"
                android:textColor="#333333"
                android:textSize="@dimen/px_35"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_item_first_scale_image"
                tools:text="文字标题 Words Title 0123456789 Multiple" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>