<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.peceoqicka.demox.gallerylayoutmanager.activity.scroll.ItemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/px_1002"
        android:layout_height="@dimen/px_380">

        <ImageView
            android:id="@+id/iv_item_auto_scroll_image"
            imageUrl="@{model.imageUrl}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/v_item_auto_scroll_mask"
            android:layout_width="0dp"
            android:layout_height="@dimen/px_80"
            android:background="#55000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_item_auto_scroll_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px_20"
            android:layout_marginEnd="@dimen/px_20"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{model.title}"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/px_45"
            app:layout_constraintBottom_toBottomOf="@+id/v_item_auto_scroll_mask"
            app:layout_constraintEnd_toEndOf="@+id/v_item_auto_scroll_mask"
            app:layout_constraintStart_toStartOf="@+id/v_item_auto_scroll_mask"
            app:layout_constraintTop_toTopOf="@+id/v_item_auto_scroll_mask"
            tools:text="文字标题 Words Title 0123456789 Multiple" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>